<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:id="@+id/profile_top_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dimen_medium"
                    android:layout_marginTop="@dimen/dimen_medium"
                    android:layout_marginEnd="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_medium"
                    android:layout_marginEnd="@dimen/dimen_medium"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_my_cards"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_my_credit_card"
                        android:drawablePadding="9dp"
                        android:fontFamily="@font/iranyekan_regular"
                        android:gravity="center"
                        android:text="کارت های من"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/font_size_small"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_mytransaction"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_my_transaction"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/iranyekan_regular"
                        android:gravity="center"
                        android:text="تراکنش های من"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/font_size_small" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/my_shopping_layout"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_my_shopping"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/iranyekan_regular"
                        android:gravity="center"
                        android:text="خریدهای من"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/font_size_small" />

                </LinearLayout>

            </LinearLayout>

            <com.baman.manex.controls.CustomRecyclerView
                android:id="@+id/customRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

        </LinearLayout>

</layout>