<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/start_layout">

        <ImageView
            android:layout_width="232dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_logo_white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layout_radius_2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/iranyekan_bold"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"/>

    </RelativeLayout>




</RelativeLayout>

</layout>