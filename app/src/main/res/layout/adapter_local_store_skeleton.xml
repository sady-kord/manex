<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_extra_small"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_small"
                android:background="@color/gray_opacity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_small"
                android:layout_marginEnd="@dimen/dimen_small"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/localstore_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/dimen_small"
                        android:background="@color/gray_opacity" />

                    <View
                        android:id="@+id/localstore_address_text"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="@dimen/dimen_small"
                        android:layout_marginEnd="@dimen/dimen_small"
                        android:background="@color/gray_opacity" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/localstore_amount_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:background="@color/gray_opacity"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="@dimen/dimen_small"
                        android:background="@color/gray_opacity">

                    </View>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</layout>